#!/usr/bin/env node

const program = require("commander");
const fs = require("fs");
const list = require("ls-all");
const path = require("path");
const chalk = require("chalk");
const Table = require("cli-table");

const generatorsPath = path.join(__dirname, "..", "generators");

// prettier-ignore
const table = new Table({
  head: [chalk.green("Module name")],
  chars: { 'top': '═' , 'top-mid': '╤' , 'top-left': '╔' , 'top-right': '╗'
         , 'bottom': '═' , 'bottom-mid': '╧' , 'bottom-left': '╚' , 'bottom-right': '╝'
         , 'left': '║' , 'left-mid': '╟' , 'mid': '─' , 'mid-mid': '┼'
         , 'right': '║' , 'right-mid': '╢' , 'middle': '│' }
});

const getModulesPaths = files => {
  const paths = files[0].files.map(file => file.path);

  return paths.reduce((mods, modPath) => {
    mods.push(modPath);
    return mods;
  }, []);
};

const listModules = modulesPaths => {
  const modulesNames = modulesPaths.map(path => {
    pathArr = path.split("/");
    return pathArr[pathArr.length - 1];
  });
  const tableRows = modulesNames.map(r => [r]);

  table.push(...tableRows);

  console.log(table.toString());
};

list([generatorsPath])
  .then(getModulesPaths)
  .then(listModules);
